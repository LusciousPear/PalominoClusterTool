<configuration>
    <property>
        <name>dfs.support.append</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://{{ groups['NameNodes'][0] }}:8020/hbase</value>
    </property>
    <property>
        <name>hbase.master.port</name>
        <value>{{ hbase["hbase.master.port"] }}</value>
    </property>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.tmp.dir</name>
        <value>{{ hbase["hbase.tmp.dir"] }}</value>
    </property>
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>{% print ",".join(groups['ZooKeepers']) %}</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.clientPort</name>
        <value>2181</value>
    </property>
    <property>
    	<name>hbase.client.write.buffer</name>
    	<value>{{ hbase["hbase.client.write.buffer"] }}</value>
    </property>
    <property>
        <name>hbase.regionserver.handler.count</name>
        <value>{{ hbase["hbase.regionserver.handler.count"] }}</value>
    </property>
    <property>
        <name>hbase.regionserver.optionallogflushinterval</name>
        <value>{{ hbase["hbase.regionserver.optionallogflushinterval"] }}</value>
    </property>
</configuration>
